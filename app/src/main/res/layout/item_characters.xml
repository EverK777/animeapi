<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardContainer"
        android:layout_width="@dimen/width_cover_character"
        android:layout_height="@dimen/height_cover_character"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="#00FFFFFF"
        android:layout_margin="@dimen/_4sdp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imageCover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>
            <TextView
                android:id="@+id/animeMangaTitle"
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="Naruto"
                android:padding="@dimen/_4sdp"
                android:background="@color/backgroundText"
                android:textSize="@dimen/small_text_view"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/textColorLight"
                android:layout_height="wrap_content"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>