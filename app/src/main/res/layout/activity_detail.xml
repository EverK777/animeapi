<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/motion_collapse_anim"
    android:background="@color/backgroundScreenWhite"
    tools:context=".ui.detailAnimeManga.DetailActivity">

    <ImageView
        android:id="@+id/coverCollapse"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/background_screen"
        android:layout_height="@dimen/height_cover2"/>

    <ImageView
        android:id="@+id/backIcon"
        android:layout_width="@dimen/small_icon"
        android:layout_height="@dimen/small_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_arrow_back_black_24dp"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/cover"
        android:layout_width="@dimen/width_cover_detail_collapse"
        android:layout_height="@dimen/height_cover_detail_collapse"
        android:layout_centerVertical="true"
        android:elevation="4dp"
        android:transformPivotX="@dimen/width_cover_detail_collapse"
        android:layout_marginStart="20dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/coverCollapse"
        app:layout_constraintTop_toBottomOf="@id/coverCollapse">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageCover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


    <com.github.florent37.shapeofview.shapes.RoundRectView
        android:id="@+id/roundedContainer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:elevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/coverCollapse"
        app:layout_constraintTop_toBottomOf="@id/coverCollapse"
        app:shape_roundRect_topLeftRadius="30dp"
        app:shape_roundRect_topRightRadius="30dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/backgroundScreenWhite"/>
    </com.github.florent37.shapeofview.shapes.RoundRectView>

    <TextView
        android:id="@+id/serieTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Naruto"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:maxLength="20"
        android:textStyle="bold"
        android:textSize="@dimen/big_text_view"
        android:textColor="@color/textColorDark"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/synopsisScroll"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/colorAccent"
        app:layout_constraintTop_toBottomOf="@id/roundedContainer">


    </androidx.core.widget.NestedScrollView>



</androidx.constraintlayout.motion.widget.MotionLayout>