<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundScreenWhite"
    app:layoutDescription="@xml/motion_collapse_anim"
    tools:context=".ui.detailAnimeManga.DetailActivity">

    <ImageView
        android:id="@+id/coverCollapse"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_cover2"
        android:background="@drawable/background_screen"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/backIcon"
        android:layout_width="@dimen/small_icon"
        android:layout_height="@dimen/small_icon"
        android:src="@drawable/ic_arrow_back_black_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.cardview.widget.CardView
        android:id="@+id/cover"
        android:layout_width="@dimen/width_cover_detail_collapse"
        android:layout_height="@dimen/height_cover_detail_collapse"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:elevation="4dp"
        android:transformPivotX="@dimen/width_cover_detail_collapse"
        app:cardCornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="@id/coverCollapse"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/coverCollapse">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageCover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


    <com.github.florent37.shapeofview.shapes.RoundRectView
        android:id="@+id/roundedContainer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:elevation="0dp"
        app:layout_constraintBottom_toBottomOf="@id/coverCollapse"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/coverCollapse"
        app:shape_roundRect_topLeftRadius="30dp"
        app:shape_roundRect_topRightRadius="30dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/backgroundScreenWhite" />
    </com.github.florent37.shapeofview.shapes.RoundRectView>

    <TextView
        android:id="@+id/serieTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:maxLength="20"
        android:text="Naruto"
        android:textColor="@color/textColorDark"
        android:textSize="@dimen/big_text_view"
        android:textStyle="bold" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/synopsisScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/roundedContainer">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/backgroundScreenWhite"
            android:minHeight="300dp"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/small_icon"
                    android:layout_height="@dimen/small_icon"
                    android:src="@drawable/ic_type_black_24dp"
                    android:tint="@color/textColorDark" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="@string/type"
                    android:textColor="@color/textColorDark"
                    android:textSize="@dimen/normal_text_view" />

                <TextView
                    android:id="@+id/typeTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:minWidth="@dimen/_56sdp"
                    android:text="Anime"
                    android:textColor="@color/textColorDark"
                    android:textSize="@dimen/normal_text_view" />

                <ImageView
                    android:layout_width="@dimen/small_icon"
                    android:layout_height="@dimen/small_icon"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/ic_date_range_black_24dp"
                    android:tint="@color/textColorDark" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="@string/start"
                    android:textColor="@color/textColorDark"
                    android:textSize="@dimen/normal_text_view" />

                <TextView
                    android:id="@+id/startDateTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="10/11/2020"
                    android:textColor="@color/textColorDark"
                    android:textSize="@dimen/normal_text_view" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/small_icon"
                    android:layout_height="@dimen/small_icon"
                    android:src="@drawable/ic_episodes_number_black_24dp"
                    android:tint="@color/textColorDark" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="@string/episodes"
                    android:textColor="@color/textColorDark"
                    android:textSize="@dimen/normal_text_view" />

                <TextView
                    android:id="@+id/episodesTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:minWidth="45dp"
                    android:text="1000"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/normal_text_view"
                    android:textStyle="italic" />

                <ImageView
                    android:layout_width="@dimen/small_icon"
                    android:layout_height="@dimen/small_icon"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/ic_date_range_black_24dp"
                    android:tint="@color/textColorDark" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="End:"
                    android:textColor="@color/textColorDark"
                    android:textSize="@dimen/normal_text_view" />

                <TextView
                    android:id="@+id/endDateTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="10/11/2020"
                    android:textColor="@color/textColorDark"
                    android:textSize="@dimen/normal_text_view" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/loadingContainer"
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content">

                <ProgressBar
                    android:id="@+id/progressCharacter"
                    android:layout_width="@dimen/small_icon"
                    android:layout_height="@dimen/small_icon"
                    android:layout_centerHorizontal="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/small_text_view"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/textColorDark"
                    android:layout_below="@id/progressCharacter"
                    android:text="Loading Characters"/>
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewCharacters"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Synopsis:"
                android:textAlignment="textStart"
                android:textColor="@color/textColorDark"
                android:textSize="@dimen/normal_text_view" />

            <TextView
                android:id="@+id/synopsisText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textAlignment="textStart"
                android:textColor="@color/textColorDark"
                android:textSize="@dimen/normal_text_view" />


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.motion.widget.MotionLayout>