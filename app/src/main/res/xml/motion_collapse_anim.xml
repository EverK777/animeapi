<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:motion="http://schemas.android.com/apk/res-auto">
    <Transition
        app:constraintSetStart="@id/start"
        app:constraintSetEnd="@id/end"
        app:duration="200"
        motion:motionInterpolator="linear">
        <OnSwipe
            app:onTouchUp="stop"
            app:dragDirection="dragUp"
            app:moveWhenScrollAtTop="true"
            app:touchAnchorSide="top"
            app:touchAnchorId="@id/synopsisScroll"
            />

        <KeyFrameSet>
            <KeyAttribute
                app:framePosition="20"
                app:motionTarget="@id/cover"
                android:rotation="90"
                android:elevation="0dp"

                />
        </KeyFrameSet>

    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/coverCollapse"
            android:layout_width="match_parent"
            android:alpha="1.0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="@dimen/height_cover2"/>

        <Constraint
            android:id="@+id/backIcon"
            android:layout_width="@dimen/small_icon"
            android:layout_height="@dimen/small_icon"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:elevation="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <CustomAttribute
                app:attributeName="ColorFilter"
                app:customColorValue="@color/textColorLight"/>
        </Constraint>

        <Constraint
            android:id="@+id/cover"
            android:layout_width="@dimen/width_cover_detail_collapse"
            android:layout_height="@dimen/height_cover_detail_collapse"
            android:elevation="4dp"
            android:rotation="0"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/coverCollapse"
            app:layout_constraintTop_toBottomOf="@id/coverCollapse"/>

        <Constraint
            android:id="@+id/roundedContainer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"
            android:elevation="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/coverCollapse"
            app:layout_constraintTop_toBottomOf="@id/coverCollapse"
            >
            <CustomAttribute
                app:attributeName="topLeftRadius"
                app:customDimension="30dp"/>

            <CustomAttribute
                app:attributeName="topRightRadius"
                app:customDimension="30dp"/>
        </Constraint>

        <Constraint
            android:id="@+id/serieTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/roundedContainer"
            android:elevation="0dp"
            app:layout_constraintStart_toEndOf="@id/cover"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"/>

        <Constraint
            android:id="@+id/synopsisScroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/roundedContainer" />




    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">

        <Constraint
            android:id="@+id/coverCollapse"
            android:layout_width="match_parent"
            android:alpha="0.8"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="@dimen/height_cover2"/>

        <Constraint
            android:id="@+id/backIcon"
            android:layout_width="@dimen/small_icon"
            android:layout_height="@dimen/small_icon"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:elevation="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <CustomAttribute
                app:attributeName="ColorFilter"
                app:customColorValue="@color/textColorDark"/>
        </Constraint>

        <Constraint
            android:id="@+id/cover"
            android:layout_width="@dimen/width_cover_detail_collapse"
            android:layout_height="@dimen/height_cover_detail_collapse"
            android:elevation="0dp"
            android:rotation="0"
            android:alpha="0.8"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/coverCollapse"
            app:layout_constraintTop_toBottomOf="@id/coverCollapse"
            />

        <Constraint
            android:id="@+id/roundedContainer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"
            android:elevation="6dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >
            <CustomAttribute
                app:attributeName="topLeftRadius"
                app:customDimension="0dp"/>

            <CustomAttribute
                app:attributeName="topRightRadius"
                app:customDimension="0dp"/>
        </Constraint>

        <Constraint
            android:id="@+id/serieTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/backIcon"
            android:layout_marginTop="10dp"
            android:elevation="8dp"
            android:layout_marginStart="10dp"/>

        <Constraint
            android:id="@+id/synopsisScroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            app:layout_constraintTop_toTopOf="@id/roundedContainer" />


    </ConstraintSet>


</MotionScene>